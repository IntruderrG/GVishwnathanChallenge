#include <iostream>
using namespace std;
void printCharBox(int size)
{
    for (int i = 0; i < size; i++)
    {
        for (int j = 0; j < size; j++)
        {
            cout << char('A' + (i + j)) << " ";
        }
        cout << endl;
    }
}
int main()
{
    int size;
    cout << "Enter the size of the pattern";
    cin >> size;
    printCharBox(size);
    return 0;
}
