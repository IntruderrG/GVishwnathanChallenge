v#include <iostream>
using namespace std;
void spacedTriangle(int size)
{

    for (int i = 0; i < size; i++)
    {

        for (char j = 'A'; j < 'A' + size - i; j++)
        {
            cout << j;
        }
        cout << endl;
    }
}
int main()
{
    int size;
    char pattern;
    cout << "Enter the size of the triangle" << endl;
    cin >> size;
    cout << "Your pattern is: \n"
         << endl;
    spacedTriangle(size);
}
