#include <iostream>
using namespace std;
void printTriangle(int size)
{
    for (int i = 0; i < size; i++)
    {
        for (int j = 0; j < size; j++)
        {
            cout << char('A' + (size - i - 1) + j) << " ";
        }
        cout << endl;
    }
}
int main()
{
    int size;
    cout << "Enter the size of the pattern" << endl;
    cin >> size;
    printTriangle(size);
    return 0;
}
