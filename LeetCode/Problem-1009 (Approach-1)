#include<iostream>
#include<vector>
#include<cmath>
using namespace std;

        int convertDecimal(vector <int> &arr)
        {
            int decimalNumber=0;
            int count=0;
            for(int i:arr)
            {
                decimalNumber=i*pow(2,count)+decimalNumber;
                count++;
            }
            return decimalNumber;
        }

        int bitwiseComplement(int n) {
            if (n==0) return 1;
            vector <int> arr;
            int complementNumber=0;
            while(n!=0)
            {
                int dig=n&1;
                dig=(dig==1)?0:1;
                arr.push_back(dig);
                n=n>>1;
            }
            int result=convertDecimal(arr);
            return result;
        }
int main()
{
    int i;
    cout<<"Enter a number"<<endl;
    cin>>i;
    int res=bitwiseComplement(i);
    cout<<res;
    
}
